@page "/profile"
@using Vizsgafeladat.VIEWMODEL

<h3>Profilom</h3>

@if (UserSession.CurrentUser == null)
{
    <p>Nem vagy bejelentkezve.</p>
}
else
{
    <div class="card p-4 shadow-sm" style="background-color: rgba(255, 255, 255, 0.9); color: #333;">
        <h5 class="card-title mb-3">👤 Profil adatok</h5>
        <p><strong>Név:</strong> @UserSession.CurrentUser.Name</p>
        <p><strong>Email:</strong> @UserSession.CurrentUser.Email</p>
    </div>

}
